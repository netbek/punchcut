.{{ baseClass }} {
  box-sizing: border-box;
  display: inline-block;
  vertical-align: middle;
  line-height: 1;
  font-weight: normal;
  font-style: normal;
  speak: none;
  text-decoration: inherit;
}

{%- for group in groups %}
  {%- if group.dppx == 1 %}
    {%- for glyph in group.glyphs %}
      .{{ glyph.class }} {
        background-image: url('{{ glyph.backgroundImage.url }}');
        background-position: {{ glyph.backgroundPosition.x }}px {{ glyph.backgroundPosition.y }}px;
        width: {{ glyph.width }}px;
        height: {{ glyph.height }}px;
      }
    {%- endfor %}
  {%- else %}
    @media only screen and (min-resolution: {{ group.dppx }}dppx) {
      .{{ baseClass }} {
        background-size: cover;
      }

      {%- for glyph in group.glyphs %}
        .{{ glyph.class }} {
          background-image: url('{{ glyph.backgroundImage.url }}');
        }
      {%- endfor %}
    }
  {%- endif %}
{%- endfor %}
